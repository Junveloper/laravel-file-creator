{
  "name": "vscode-laravel-file-creator",
  "displayName": "Laravel File Creator",
  "publisher": "junveloper",
  "description": "A Visual Studio Code Extension to create Laravel files from context menu in file explorer",
  "version": "1.0.3",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Junveloper/laravel-file-creator.git"
  },
  "author": {
    "name": "Jun Im",
    "url": "https://github.com/junveloper"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/composer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelFileCreator.createBladeFile",
        "category": "Laravel File Creator",
        "title": "Create Blade File"
      },
      {
        "command": "laravelFileCreator.createBladeComponentClass",
        "category": "Laravel File Creator",
        "title": "Create Blade Component Class"
      },
      {
        "command": "laravelFileCreator.createConfig",
        "category": "Laravel File Creator",
        "title": "Create Config File"
      },
      {
        "command": "laravelFileCreator.createCommand",
        "category": "Laravel File Creator",
        "title": "Create Console Command"
      },
      {
        "command": "laravelFileCreator.createSingleActionController",
        "category": "Laravel File Creator",
        "title": "Create Single Action Controller"
      },
      {
        "command": "laravelFileCreator.createEvent",
        "category": "Laravel File Creator",
        "title": "Create Event"
      },
      {
        "command": "laravelFileCreator.createEventListener",
        "category": "Laravel File Creator",
        "title": "Create Event Listener"
      },
      {
        "command": "laravelFileCreator.createException",
        "category": "Laravel File Creator",
        "title": "Create Exception"
      },
      {
        "command": "laravelFileCreator.createFormRequest",
        "category": "Laravel File Creator",
        "title": "Create Form Request"
      },
      {
        "command": "laravelFileCreator.createJob",
        "category": "Laravel File Creator",
        "title": "Create Job"
      },
      {
        "command": "laravelFileCreator.createJsonResource",
        "category": "Laravel File Creator",
        "title": "Create JSON Resource"
      },
      {
        "command": "laravelFileCreator.createJsonResourceCollection",
        "category": "Laravel File Creator",
        "title": "Create JSON Resource Collection"
      },
      {
        "command": "laravelFileCreator.createModel",
        "category": "Laravel File Creator",
        "title": "Create Model"
      },
      {
        "command": "laravelFileCreator.createMigration",
        "category": "Laravel File Creator",
        "title": "Create Migration"
      },
      {
        "command": "laravelFileCreator.createMailable",
        "category": "Laravel File Creator",
        "title": "Create Mailable"
      },
      {
        "command": "laravelFileCreator.createNotification",
        "category": "Laravel File Creator",
        "title": "Create Notification"
      },
      {
        "command": "laravelFileCreator.createPestTest",
        "category": "Laravel File Creator",
        "title": "Create Pest Test"
      },
      {
        "command": "laravelFileCreator.createPolicy",
        "category": "Laravel File Creator",
        "title": "Create Policy"
      },
      {
        "command": "laravelFileCreator.createResourceController",
        "category": "Laravel File Creator",
        "title": "Create Resource Controller"
      },
      {
        "command": "laravelFileCreator.createRule",
        "category": "Laravel File Creator",
        "title": "Create Rule"
      },
      {
        "command": "laravelFileCreator.createLaravelFile",
        "category": "Laravel File Creator",
        "title": "Create Other Laravel Files..."
      }
    ],
    "submenus": [
      {
        "id": "laravelFileCreator.menu",
        "label": "New Laravel file..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "laravelFileCreator.menu",
          "group": "navigation@-1"
        }
      ],
      "laravelFileCreator.menu": [
        {
          "command": "laravelFileCreator.createBladeFile",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateBladeFile",
          "group": "1_laravelFileCreator@1"
        },
        {
          "command": "laravelFileCreator.createBladeComponentClass",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateBladeComponentClass",
          "group": "1_laravelFileCreator@2"
        },
        {
          "command": "laravelFileCreator.createConfig",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateConfig",
          "group": "1_laravelFileCreator@3"
        },
        {
          "command": "laravelFileCreator.createCommand",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateCommand",
          "group": "1_laravelFileCreator@4"
        },
        {
          "command": "laravelFileCreator.createSingleActionController",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateSingleActionController",
          "group": "1_laravelFileCreator@5"
        },
        {
          "command": "laravelFileCreator.createEvent",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateEvent",
          "group": "1_laravelFileCreator@6"
        },
        {
          "command": "laravelFileCreator.createEventListener",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateEventListener",
          "group": "1_laravelFileCreator@7"
        },
        {
          "command": "laravelFileCreator.createException",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateException",
          "group": "1_laravelFileCreator@8"
        },
        {
          "command": "laravelFileCreator.createFormRequest",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateFormRequest",
          "group": "1_laravelFileCreator@9"
        },
        {
          "command": "laravelFileCreator.createJob",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateJob",
          "group": "1_laravelFileCreator@10"
        },
        {
          "command": "laravelFileCreator.createJsonResource",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateJsonResource",
          "group": "1_laravelFileCreator@11"
        },
        {
          "command": "laravelFileCreator.createJsonResourceCollection",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateJsonResourceCollection",
          "group": "1_laravelFileCreator@12"
        },
        {
          "command": "laravelFileCreator.createModel",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateModel",
          "group": "1_laravelFileCreator@15"
        },
        {
          "command": "laravelFileCreator.createMigration",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateMigration",
          "group": "1_laravelFileCreator@14"
        },
        {
          "command": "laravelFileCreator.createMailable",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateMailable",
          "group": "1_laravelFileCreator@13"
        },
        {
          "command": "laravelFileCreator.createNotification",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateNotification",
          "group": "1_laravelFileCreator@16"
        },
        {
          "command": "laravelFileCreator.createPestTest",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreatePestTest",
          "group": "1_laravelFileCreator@17"
        },
        {
          "command": "laravelFileCreator.createPolicy",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreatePolicy",
          "group": "1_laravelFileCreator@18"
        },
        {
          "command": "laravelFileCreator.createResourceController",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateResourceController",
          "group": "1_laravelFileCreator@19"
        },
        {
          "command": "laravelFileCreator.createRule",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated && config.laravelFileCreator.showCreateRule",
          "group": "1_laravelFileCreator@20"
        },
        {
          "command": "laravelFileCreator.createLaravelFile",
          "when": "explorerResourceIsFolder && laravelFileCreator.activated",
          "group": "2_laravelFileCreator@1"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Laravel File Creator",
      "properties": {
        "laravelFileCreator.showCreateBladeFile": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Blade file",
          "order": 1
        },
        "laravelFileCreator.showCreateBladeComponentClass": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Blade Component class",
          "order": 2
        },
        "laravelFileCreator.showCreateConfig": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Config file",
          "order": 3
        },
        "laravelFileCreator.showCreateCommand": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Console Command",
          "order": 4
        },
        "laravelFileCreator.showCreateSingleActionController": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a single action Controller",
          "order": 5
        },
        "laravelFileCreator.showCreateEvent": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create an Event",
          "order": 6
        },
        "laravelFileCreator.showCreateEventListener": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create an Event Listener",
          "order": 7
        },
        "laravelFileCreator.showCreateException": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create an Exception",
          "order": 8
        },
        "laravelFileCreator.showCreateFormRequest": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Form Request",
          "order": 9
        },
        "laravelFileCreator.showCreateJob": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Job",
          "order": 10
        },
        "laravelFileCreator.showCreateJsonResource": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a JSON Resource",
          "order": 11
        },
        "laravelFileCreator.showCreateJsonResourceCollection": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a JSON Resource Collection",
          "order": 12
        },
        "laravelFileCreator.showCreateModel": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Model",
          "order": 15
        },
        "laravelFileCreator.showCreateMigration": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Migration",
          "order": 14
        },
        "laravelFileCreator.showCreateMailable": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Mailable",
          "order": 13
        },
        "laravelFileCreator.showCreateNotification": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Notification",
          "order": 16
        },
        "laravelFileCreator.showCreatePestTest": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Pest Test",
          "order": 17
        },
        "laravelFileCreator.showCreatePolicy": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Policy",
          "order": 18
        },
        "laravelFileCreator.showCreateResourceController": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Resource Controller",
          "order": 19
        },
        "laravelFileCreator.showCreateRule": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show in the 'New Laravel file...' menu to create a Rule",
          "order": 20
        },
        "laravelFileCreator.omitDownMethodInMigration": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Omit the `down` method in the migration file",
          "order": 7
        },
        "laravelFileCreator.composerFilePath": {
          "type": "string",
          "default": null,
          "markdownDescription": "Set `composer.json` location path (relative to project root folder)",
          "order": 8
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile:commandMapping": "tsc src/LaravelFile/commandMapping.ts --outDir out/LaravelFile",
    "compile:generatePackageJson": "tsc scripts/generatePackageJson.ts --outDir scripts",
    "generatePackageJson": "node scripts/scripts/generatePackageJson.js",
    "compile:src": "tsc -p ./",
    "compile": "pnpm run compile:commandMapping && pnpm run compile:generatePackageJson && pnpm run generatePackageJson && pnpm run compile:src",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "vsce": "^2.15.0"
  }
}
