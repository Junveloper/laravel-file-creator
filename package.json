{
  "name": "vscode-laravel-file-creator",
  "displayName": "Laravel File Creator",
  "description": "A Visual Studio Code Extension to create Laravel files from context menu in file explorer",
  "version": "0.0.1",
  "author": {
    "name": "Jun Im",
    "url": "https://github.com/junveloper"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/composer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelFileCreator.createSingleActionController",
        "category": "Laravel File Creator",
        "title": "Create Single Action Controller"
      },
      {
        "command": "laravelFileCreator.createFormRequest",
        "category": "Laravel File Creator",
        "title": "Create Form Request"
      },
      {
        "command": "laravelFileCreator.createModel",
        "category": "Laravel File Creator",
        "title": "Create Model"
      },
      {
        "command": "laravelFileCreator.createMigration",
        "category": "Laravel File Creator",
        "title": "Create Migration"
      },
      {
        "command": "laravelFileCreator.createLaravelFile",
        "category": "Laravel File Creator",
        "title": "Create Other Laravel Files..."
      }
    ],
    "submenus": [
      {
        "id": "laravelFileCreator.menu",
        "label": "New Laravel file..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "laravelFileCreator.menu",
          "group": "navigation@-1"
        }
      ],
      "laravelFileCreator.menu": [
        {
          "command": "laravelFileCreator.createSingleActionController",
          "when": "explorerResourceIsFolder && phpCreateClass.activated && config.laravelFileCreator.showCreateSingleActionController",
          "group": "1_laravelFileCreator@1"
        },
        {
          "command": "laravelFileCreator.createFormRequest",
          "when": "explorerResourceIsFolder && phpCreateClass.activated && config.laravelFileCreator.showCreateFormRequest",
          "group": "1_laravelFileCreator@2"
        },
        {
          "command": "laravelFileCreator.createModel",
          "when": "explorerResourceIsFolder && phpCreateClass.activated && config.laravelFileCreator.showCreateModel",
          "group": "1_laravelFileCreator@3"
        },
        {
          "command": "laravelFileCreator.createMigration",
          "when": "explorerResourceIsFolder && phpCreateClass.activated && config.laravelFileCreator.showCreateMigration",
          "group": "1_laravelFileCreator@4"
        },
        {
          "command": "laravelFileCreator.createLaravelFile",
          "when": "explorerResourceIsFolder && phpCreateClass.activated",
          "group": "2_laravelFileCreator@4"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Laravel File Creator",
      "properties": {
        "laravelFileCreator.showCreateSingleActionController": {
          "type": "boolean",
          "default": true,
          "description": "Show in the 'New Laravel file...' menu to create a single action controller",
          "order": 1
        },
        "laravelFileCreator.showCreateFormRequest": {
          "type": "boolean",
          "default": true,
          "description": "Show in the 'New Laravel file...' menu to create a form request",
          "order": 2
        },
        "laravelFileCreator.showCreateModel": {
          "type": "boolean",
          "default": true,
          "description": "Show in the 'New Laravel file...' menu to create a model",
          "order": 3
        },
        "laravelFileCreator.showCreateMigration": {
          "type": "boolean",
          "default": true,
          "description": "Show in the 'New Laravel file...' menu to create a migration",
          "order": 4
        },
        "laravelFileCreator.omitDownMethodInMigration": {
          "type": "boolean",
          "default": true,
          "description": "Omit the `down` method in the migration file",
          "order": 5
        },
        "laravelFileCreator.composerFilePath": {
          "type": "string",
          "default": null,
          "markdownDescription": "Set `composer.json` location path (relative to project root folder)",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
